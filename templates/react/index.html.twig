{% extends 'base.html.twig' %}

{% block title %}Hello ReactController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/ReactController.php'|file_link(0) }}">src/Controller/ReactController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/react/index.html.twig'|file_link(0) }}">templates/react/index.html.twig</a></code></li>
    </ul>
</div>


<hr/>
<div class="example-wrapper">
    <h1>Hello react_component! ✅</h1>
    <div {{ react_component('Hello', { 'fullName': controller_name }) }}>
        Loading... <i class="fas fa-cog fa-spin fa-3x"></i>
    </div>
</div>

<hr/>
<div class="example-wrapper">
    <h1>Hello data-controller! ✅</h1>
    <div data-controller="hello"></div>
</div>
{% endblock %}
