<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Hello Symfony{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {% block style %}{% endblock %}
    </head>

    <body>
    <header>
        <nav>
            <div>
                {% set _route = app.request.get('_route') %}
                <a href="/">Default</a>
                &nbsp;|&nbsp;
                {% if _route == 'homepage' or _route == 'app_index' %}<b>Home</b>
                {% else %}<a href="{{ path('app_index') }}">Home</a>
                {% endif %}
                &nbsp;|&nbsp;
                {% if _route == 'app_spa' %}<b>SPA</b>
                {% else %}<a href="{{ path('app_spa') }}">SPA</a>
                {% endif %}
            </div>
        </nav>
    </header>
    <hr/>

    {% block main %}{% endblock %}
    </body>
</html>
